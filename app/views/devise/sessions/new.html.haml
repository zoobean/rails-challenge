%h2 Sign in
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .mb-3
    %label.form-label{:for => "email"} Email address
    = f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", "aria-describedby" => "emailHelp"
    #emailHelp.form-text We'll never share your email with anyone else.
  .mb-3
    %label.form-label{:for => "password"} Password
    = f.password_field :password, autocomplete: "current-password", id: "password", class: "form-control"
  .mb-3.form-check
    = f.check_box :remember_me, id: "exampleCheck1", class: "form-check-input"
    = f.label :remember_me, class: "form-check-label", for: "exampleCheck1"
  = f.submit "Sign in", class: "btn btn-primary"

